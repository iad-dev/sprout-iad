# From https://github.com/chef-cookbooks/homebrew/issues/105
# Allow NOPASSWD for homebrew actions
Defaults:pivotal        env_keep += "ARCHFLAGS PKG_CONFIG_PATH GOPATH PYTHONPATH COLORS DISPLAY HOSTNAME HISTSIZE INPUTRC KDEDIR LS_COLORS GIT_WORK_TREE GIT_DIR HTTP_PROXY HTTPS_PROXY FTP_PROXY RSYNC_PROXY", !requiretty
pivotal <%= @hostname -%>=(root) NOPASSWD:SETENV: /bin/chmod
pivotal <%= @hostname -%>=(root) NOPASSWD:SETENV: /usr/sbin/chown
pivotal <%= @hostname -%>=(root) NOPASSWD:SETENV: /bin/mkdir
pivotal <%= @hostname -%>=(root) NOPASSWD:SETENV: /usr/bin/chgrp
pivotal <%= @hostname -%>=(root) NOPASSWD:SETENV: /usr/bin/touch
pivotal <%= @hostname -%>=(root) NOPASSWD:SETENV: /usr/sbin/softwareupdate
pivotal <%= @hostname -%>=(root) NOPASSWD:SETENV: /bin/rm
pivotal <%= @hostname -%>=(root) NOPASSWD:SETENV: /usr/sbin/installer
pivotal <%= @hostname -%>=(root) NOPASSWD:SETENV: /usr/libexec/PlistBuddy
pivotal <%= @hostname -%>=(root) NOPASSWD:SETENV: /bin/ln
